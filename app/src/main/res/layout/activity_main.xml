<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Principal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#307DCF"
                android:gravity="center_horizontal|center_vertical"
                android:text="Eduardo Diaz"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#307DCF"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/FotoPrincipal"
                android:layout_width="match_parent"
                android:layout_height="179dp"
                android:background="#307DCF"
                android:src="@drawable/logo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="#000000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#000000"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginBottom="15sp"
                    android:background="#474646"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="89dp"
                        android:background="#307DCF"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="348dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="Reproductor de chistes"
                                android:textColor="#FFFFFF"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/btchiste"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="#117E05"
                                android:text="Escuchar"
                                android:textColor="#FFFFFF"
                                app:cornerRadius="0sp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#000000"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btllamar"
                        android:layout_width="102dp"
                        android:layout_height="101dp"
                        android:layout_marginLeft="22sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:backgroundTint="#117E05"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Llamar"
                        app:cornerRadius="8sp"
                        app:icon="@android:drawable/stat_notify_missed_call"
                        app:iconGravity="textTop"
                        app:iconSize="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btalarma"
                        android:layout_width="109dp"
                        android:layout_height="101dp"
                        android:layout_marginLeft="22sp"
                        android:layout_weight="1"
                        android:backgroundTint="#117E05"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Alarma"
                        app:cornerRadius="8sp"
                        app:icon="@android:drawable/ic_lock_idle_alarm"
                        app:iconGravity="textTop"
                        app:iconSize="30dp"
                        app:iconTint="#FFFFFF"
                        tools:ignore="DuplicateIds" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/juegoDados"
                        android:layout_width="104dp"
                        android:layout_height="102dp"
                        android:layout_marginLeft="22sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:backgroundTint="#117E05"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Dados"
                        app:cornerRadius="8sp"
                        app:icon="@android:drawable/ic_popup_sync"
                        app:iconGravity="textTop"
                        app:iconSize="30dp"
                        app:iconTint="#FFFFFF" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#000000"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btTiktok"
                        android:layout_width="103dp"
                        android:layout_height="97dp"
                        android:layout_marginLeft="22sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:backgroundTint="#117E05"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="TikTok"
                        app:cornerRadius="8sp"
                        app:icon="@android:drawable/ic_menu_share"
                        app:iconGravity="textTop"
                        app:iconSize="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/pbChiste"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:outlineAmbientShadowColor="#FFFFFF"
                        android:outlineSpotShadowColor="#FFFFFF"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btconfiguracion"
                        android:layout_width="107dp"
                        android:layout_height="98dp"
                        android:layout_marginLeft="22sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:backgroundTint="#117E05"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Ajustes"
                        app:cornerRadius="8sp"
                        app:icon="@android:drawable/ic_menu_manage"
                        app:iconGravity="textTop"
                        app:iconSize="30dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>